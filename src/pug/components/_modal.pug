//#callback.modal.mfp-hide.animated
#callback.modal.animated

  form.modal__form.modal__form-choose.is-active.animated

    span!= "SAKURA BLOSSOM"

    .modal__form-field(js-chooseLabel, data-count="5 чел. / 50 000 p.")
        .modal__form-field--left
          +icon('ico-people')
          | 5 ЧЕЛ.
        .modal__form-field--right
          | 50 000 p.

    .modal__form-field(js-chooseLabel, data-count="7 чел. / 75 000 p.")
        .modal__form-field--left
          +icon('ico-people')
          | 7 ЧЕЛ.
        .modal__form-field--right
          | 75 000 p.

    .modal__form-field(js-chooseLabel, data-count="10 чел. / 100 000 p.")
        .modal__form-field--left
          +icon('ico-people')
          | 10 ЧЕЛ.
        .modal__form-field--right
          | 100 000 p.

    +customBtn('cbutton--active modal__cbtn js-chooseModal', "ЗАКАЗАТЬ")

  form.modal__form.modal__form-data.animated(js-modal)

    p(js-count)!= "5 чел. / 50 000 p."
    span!= "ЯПОНСКИЕ СЕЗОНЫ"

    .modal__form-field
      input(type="text" name="name" placeholder="ВАШЕ ИМЯ")

    .modal__form-field.modal__form-field--phone
      input(type="tel" name="phone" placeholder="ВАШ НОМЕР")

    .modal__form-field.modal__form-field--email
      input(type="email" name="email" placeholder="ПОЧТА")

    +customBtnSubmit('cbutton--active modal__cbtn', "ОТПРАВИТЬ")

// FOOTER :: END