- var svgSprite = 'img/sprite.svg'

mixin icon(name, modClass)
  if modClass == undefined
    - var modClass = ''
  else
    - var modClass = ' ' + modClass
  svg(class="ico " + name + modClass)
    use(xlink:href= svgSprite + '#' + name)


mixin newsBlock(idx, className)
  .news__wrap
    -for(var i = 0; i < idx; i++)
      div.news__wrap-elem(class= className)
        img(src="./img/ImagePreview-0_news.jpg")
        .news__wrap-hidden
          p!= "ОТКРЫТИЕ<br/>ЮНИКЛО"


mixin customBtn(className, text)
  a.cbutton(href="#" class= className)
    .cbutton__block
      .cbutton__block-bg.cbutton__block-bg--0
      .cbutton__block-bg.cbutton__block-bg--1
    .cbutton__text!= text


mixin customBtnLink(href, className, text)
  a.cbutton(href= href, class= className)
    .cbutton__block
      .cbutton__block-bg.cbutton__block-bg--0
      .cbutton__block-bg.cbutton__block-bg--1
    .cbutton__text!= text


mixin customBtnSubmit(className, text)
  button.cbutton(class= className, type="submit")
    .cbutton__block
      .cbutton__block-bg.cbutton__block-bg--0
      .cbutton__block-bg.cbutton__block-bg--1
    .cbutton__text!= text


mixin customBtnId(href, className, text)
  a.cbutton(href= href, class= className)
    .cbutton__block
      .cbutton__block-bg.cbutton__block-bg--0
      .cbutton__block-bg.cbutton__block-bg--1
    .cbutton__text!= text


mixin customBtnImage(href, className, iconName)
  a.cbutton(href= href, class= className)
    .cbutton__block
      .cbutton__block-bg.cbutton__block-bg--0
      .cbutton__block-bg.cbutton__block-bg--1
    .cbutton__icon(class= iconName)


// programs__block--normal
// programs__block--reverse
mixin prgramsBlock(className, imgName, hashText, title, time, text)
  div(class="programs__block " + className)
    .programs__block--left

      .programs__block-video
        img(src="./img/" + imgName + ".jpg")
        +customBtnImage('#gallery', 'cbutton--icon js-play', "icon-play")

      p!= hashText

    .programs__block--right

      .programs__block-header
        h4!= title

        .programs__block-time
          i.programs__block-icon.icon-clock
          span.programs__block-icon!= time

      p!= text

      +customBtnId('#callback', 'programs__block-cbtn js-popup', "СТОИМОСТЬ")


mixin programFullBlock(imgName, hashText, cbtnText, time)
  .programs__container

    .programs__container-video
      img(src="./img/" + imgName + ".jpg")

    .programs__container-info
      p!= hashText
      +customBtn('programs__container-cbtn', cbtnText)

      if(time)
        .programs__container-time
          i.programs__container-icon.icon-clockWhite
          span.programs__container-icon!= time


mixin programFullBlockHover(imgName, hashText, cbtnText, hoverText, hoverName)
  .season__box

    .season__box-img
      img(src="./img/" + imgName + ".jpg")

    .season__box-info
      p!= hashText
      +customBtn('season__box-cbtn', cbtnText)

    .season__box-hover
      p!= hoverText
      span!= hoverName


mixin seasconBlock(text, arr)
  .season__block
    p!= text

  .season__elem
    -for(var i = 0, len = arr.length; i < len; i++)
      .season__elem-container
        .season__elem-item
          != arr[i]

        p!= "#БАРАБАННЫЙ НОМЕР"

